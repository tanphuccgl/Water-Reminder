<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background_edit"
    android:padding="@dimen/_20sdp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Unit"
        android:textSize="@dimen/_22sdp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="@dimen/_18sdp"
            />
        <LinearLayout
            android:id="@+id/layout_view_type"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_1sdp"
            android:background="@drawable/bg_backgroud_until_blue"
            >

            <RelativeLayout
                android:id="@+id/rl_weightKg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_backgroud_until"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="kg"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_weightIbs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_backgroud_until_blue"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_ibs"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Ibs"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textSize="@dimen/_18sdp"
            />
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_1sdp"
            android:background="@drawable/bg_backgroud_until_blue"
            >

            <RelativeLayout
                android:id="@+id/rl_ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_backgroud_until"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="ml"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_oz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_backgroud_until_blue"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_oz"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="fl oz"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        >
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/green"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_ok"
            android:text="CANCEL"
            android:textColor="@color/text_color2"
            android:layout_marginRight="@dimen/_30sdp"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>
</LinearLayout>